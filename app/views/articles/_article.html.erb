<div class="row">
  <div class="col-sm-8">
        <div class="card">
          <div class="card-header">
            <h3><%= article.title %></h3>
          </div>
          <div class="card-block">
            <p class="card-text"><%= @markdown.render(article.body).html_safe %></p>
            <p class="card-text"><small class="text-muted">Last updated <%= article.updated_at %></small></p>
            <div align="right">
              <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-success'%>
              <%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: 'Are you sure to delete?' }, class:'btn btn-danger' %>
              <%= link_to 'Add comment', article, class:'btn btn-primary' %>
            </div>
          </div>
          <div class="card-footer">
            <h6>Comments:</h6>
            <ul class="list-group">
              <%= render article.comments %>
            </ul>
          </div>
        </div>
  </div>
</div>