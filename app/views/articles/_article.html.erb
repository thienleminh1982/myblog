<div class="row">
  <div class="col-sm-8">
        <div class="card">
          <div class="card-block">
            <h4 class="card-title"><%= article.title %></h4>
            <p class="card-text"><%= @markdown.render(article.body).html_safe %></p>
          </div>
          <div class="card-footer">
            <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-success' %>
          </div>
        </div>
  </div>
</div>